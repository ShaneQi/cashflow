<dashboard theme="dark">
  <init>
    <eval token="cycle">strftime(now() - 3600 * 24 * 30, "%y%m")</eval>
    <set token="category">ALL</set>
  </init>
  <label>E Dashboard</label>
  <row>
    <panel>
      <chart>
        <title>Flex Spending by Cycle in the last 13 cycles</title>
        <search ref="Flex Spending by Cycle in the last 13 cycles"></search>
        <option name="charting.drilldown">all</option>
        <drilldown>
          <set token="cycle">$click.value$</set>
          <set token="category">ALL</set>
        </drilldown>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <chart>
        <title>Flex Spending in $cycle$ by Category</title>
        <search>
          <query>| savedsearch "Flex Spending in [cycle] by Category" cycle=$cycle$</query>
          <earliest>0</earliest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="charting.axisTitleX.visibility">collapsed</option>
        <option name="charting.axisTitleY.visibility">collapsed</option>
        <option name="charting.chart">bar</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.legend.placement">none</option>
        <option name="height">600</option>
        <drilldown>
          <set token="category">$click.value$</set>
        </drilldown>
      </chart>
    </panel>
    <panel>
      <table>
        <title>Flex Spending in $cycle$ by Category</title>
        <search>
          <query>| savedsearch "Flex Spending in [cycle] by Category" cycle=$cycle$</query>
          <earliest>0</earliest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="count">100</option>
        <option name="drilldown">row</option>
        <drilldown>
          <set token="category">$click.value$</set>
        </drilldown>
      </table>
    </panel>
  </row>
  <row>
    <panel>
      <table>
        <title>Flex Spending in $category$ in $cycle$</title>
        <search>
          <query>| savedsearch "Flex Spending in [category] in [cycle]" cycle=$cycle$ category="$category$"</query>
          <earliest>0</earliest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="count">100</option>
        <option name="drilldown">none</option>
        <option name="percentagesRow">false</option>
        <option name="rowNumbers">true</option>
        <option name="totalsRow">true</option>
        <option name="wrap">true</option>
      </table>
    </panel>
  </row>
</dashboard>